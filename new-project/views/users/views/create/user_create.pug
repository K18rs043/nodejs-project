extends ../../../homepage/layouts/header

block content 
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
    link(src='/styles/login_style')
    // ---- Include the above in your HEAD tag --------
    div#login
        h3.text-center.text-white.pt-5 Login form
        div.container
            if errors
                each error in errors
                    .alert.alert-danger= error
            div#login-row.row.justify-content-center.align-items-center
                div#login-column.col-md-6
                    div#login-box.col-md-12
                        form#login-form.form(method='post')
                            h3.text-center.text-info Sign Up
                            div.form-group
                                label.text-info(for='email') Email:
                                br
                                input#email.form-control(type='text', name='email' value=values ? values.email: "")
                            div.form-group
                                label.text-info(for='name') Name:
                                br
                                input#name.form-control(type='text', name='name' value=values ? values.name: "")
                            div.form-group
                                label.text-info(for='password1') Password 1:
                                br
                                input#password1.form-control(type='password', name='password1')
                            div.form-group
                                label.text-info(for='password2') Password 2:
                                br
                                input#password2.form-control(type='password', name='password2')                                
                            div.form-group
                                label.text-info(for='phone') Phone number:
                                br
                                input#phone.form-control(type='text', name='phone' value=values ? values.phone: "")                                                                
                                br
                                input.btn.btn-info.btn-md(type='submit', name='submit', value='Submit')
                            div#register-link.text-right
                                a If you had an account then 
                                a.text-info(href='/auth/login') Login here