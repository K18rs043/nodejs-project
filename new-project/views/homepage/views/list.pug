extends ../layouts/header

block content 
    h1 This is restaurants list
    table.table
        tr
            th Image
            th Name
            th Phone Number
            th Address
            th detail

        
        each restaurant in restaurants
            tr
                td
                    img(src= "/" + restaurant.avatar width="50" height="50")
                td= restaurant.name
                td= restaurant.phone
                td= restaurant.address
                td
                    a(class="btn btn-light", href="/homepage/list/" + restaurant.id) Detail
            